        </AnchorPane>
        <JFXButton fx:id="signupButton" layoutX="166.0" layoutY="352.0" prefHeight="27.0" prefWidth="141.0" style="-fx-border-color: #ffffff; -fx-border-radius: 3em; -fx-background-radius: 3em; -fx-cursor: hand;" styleClass="signupButton" text="Sign up" textFill="WHITE" />
