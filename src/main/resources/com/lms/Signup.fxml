            <children>
                <Label layoutY="7.0" text="Already have an account?" textFill="WHITE" />
                <JFXButton fx:id="backToLogin" layoutX="151.0" layoutY="3.0" prefHeight="25.0" prefWidth="58.0" style="-fx-cursor: hand;" styleClass="signupButton" text="Log in." onAction="#backToLogin" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </JFXButton>
            </children>
        </AnchorPane>
        <Label layoutX="124.0" layoutY="91.0" prefHeight="25.0" prefWidth="100.0" text="Sign up" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="27.0" />
            </font>
        </Label>
