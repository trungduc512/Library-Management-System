                <PasswordField fx:id="signupPassword" alignment="CENTER" layoutX="36.0" layoutY="40.0" prefHeight="25.0" prefWidth="248.0" promptText="Enter Password" style="-fx-background-radius: 3em; -fx-border-radius: 3em;" />
                <TextField fx:id="signupUsername" alignment="CENTER" layoutX="36.0" layoutY="2.0" prefHeight="25.0" prefWidth="248.0" promptText="Enter Username" style="-fx-background-radius: 3em; -fx-border-radius: 3em;" />
                <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="2.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Images/username-logo.png" />
                    </image>
                </ImageView>
                <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="2.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Images/password-icon.png" />
                    </image>
                </ImageView>
            <PasswordField fx:id="confirmPassword" alignment="CENTER" layoutX="36.0" layoutY="76.0" prefHeight="25.0" prefWidth="248.0" promptText="Confirm Password" style="-fx-background-radius: 3em; -fx-border-radius: 3em;" />
            <ImageView fitHeight="25.0" fitWidth="25.0" layoutX="2.0" layoutY="77.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/password-icon.png" />
               </image>
            </ImageView>
