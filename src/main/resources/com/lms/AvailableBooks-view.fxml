<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="availableBooksPane" prefHeight="600.0" prefWidth="840" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.AvailableBooksController">

    <!-- Main content area with BorderPane layout for ListView and pagination controls -->
    <BorderPane prefHeight="600.0" prefWidth="840.0" style="-fx-padding: 10;">

        <!-- Bottom: Pagination controls -->
        <bottom>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="820.0" spacing="10" style="-fx-padding: 5;">
                <Button fx:id="prevButton" text="Previous" />
                <Button fx:id="nextButton" text="Next" />
            </HBox>
        </bottom>
      <center>
            <AnchorPane prefHeight="539.0" prefWidth="820.0" BorderPane.alignment="CENTER">
                <children>
                    <ListView fx:id="listView" layoutY="40.0" prefHeight="500.0" prefWidth="820.0" />

                      <!-- Suggestion ListView positioned below the search bar, hidden by default -->
                      <ListView fx:id="suggestionListView" layoutX="498.0" layoutY="27.0" maxHeight="221.0" maxWidth="813.0" mouseTransparent="false" prefHeight="13.0" prefWidth="315.0" style="-fx-background-color: white; -fx-border-color: lightgray;" visible="false" />
                      <TextField fx:id="searchField" layoutX="664.0" layoutY="2.0" maxWidth="250.0" promptText="Search books..." />
                </children>
            </AnchorPane>
      </center>

    </BorderPane>

</StackPane>
