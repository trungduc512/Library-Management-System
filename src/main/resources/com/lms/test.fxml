<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lms.SearchController" stylesheets="@Style.css">
    <TextField fx:id="search" layoutX="14.0" layoutY="18.0" promptText="Search book here"/>
    <Button fx:id="searchButton" layoutX="200.0" layoutY="18.0" mnemonicParsing="false" onAction="#clicked"
            text="Search"/>
    <ScrollPane layoutY="60.0" prefHeight="540.0" prefWidth="840.0">
        <VBox fx:id="vbox" prefHeight="555.0" prefWidth="840.0"/>
    </ScrollPane>
</AnchorPane>

