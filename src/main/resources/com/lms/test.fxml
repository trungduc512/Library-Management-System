<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <!-- Center: TableView for displaying data -->
    <center>
        <AnchorPane>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="300.0" layoutY="50.0">
                <columns>
                    <TableColumn fx:id="column1" text="Column 1"/>
                    <TableColumn fx:id="column2" text="Column 2"/>
                </columns>
            </TableView>

            <!-- ComboBox that overlays the TableView -->
            <ComboBox fx:id="comboBox" prefWidth="200.0" layoutX="50.0" layoutY="10.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Option 1"/>
                        <String fx:value="Option 2"/>
                        <String fx:value="Option 3"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </AnchorPane>
    </center>
</BorderPane>
