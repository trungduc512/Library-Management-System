<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600.0" prefWidth="840.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BorrowerListController">
    <AnchorPane prefHeight="600.0" prefWidth="840.0">
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <Label fx:id="noBorrowersLabel" text="No borrowers found." visible="false" />
            <TableView fx:id="borrowerTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="borrowerIdColumn" text="ID" />
                    <TableColumn fx:id="fullNameColumn" prefWidth="329.0" text="Full Name" />
                    <TableColumn fx:id="userNameColumn" prefWidth="277.0" text="Username" />
                    <TableColumn fx:id="statusColumn" prefWidth="133.0" text="Status" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
        </VBox>
    </AnchorPane>
</StackPane>
